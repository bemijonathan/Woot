{
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "es2016",
    "module": "Node16",
    "moduleResolution": "node16",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": false,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "strict": true,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "incremental": true,
    "resolveJsonModule": true
  }
}
